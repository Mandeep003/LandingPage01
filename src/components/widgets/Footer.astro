---
// Import necessary utility for permalink
import { getHomePermalink } from '~/utils/permalinks';

export interface Props {
  theme?: string;
}

// Get the theme prop for styling
const { theme = 'light' } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose']}>
  <!-- Background Layer -->
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>

  <!-- Footer Content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300 py-8 md:py-12">
    <!-- Company Info -->
    <div class="text-center">
      <div class="font-bold text-xl mb-2">Metasask</div>
      <div class="text-sm text-muted mb-2">
        <p>1312 12th Street East, Saskatoon</p>
        <p>Phone: (123) 456-7890</p>
        <p>Email: info@metasask.com</p>
      </div>
    </div>

    <!-- Copyright Notice -->
    <div class="mt-8 text-center text-sm dark:text-muted">
      &copy; {new Date().getFullYear()} Metasask. All rights reserved.
    </div>
  </div>
</footer>
