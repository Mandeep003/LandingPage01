---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'Material Circle - Comprehensive Metallurgical Solutions',
  description: 'Professional metallurgical analysis, material testing, engineering consulting, and solutions for diverse industries.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>

  <!-- Hero Section -->
  <Hero
    actions={[
      { text: 'Our Services', href: '#services' },
      { text: 'Contact Us', href: '#contact' }
    ]}
    image={{ src: '~/assets/images/fire.jpg', alt: 'Metallurgical Analysis Hero Image' }}
  >
    <Fragment slot="title">
      Welcome to Material Circle
    </Fragment>

    <Fragment slot="subtitle">
      Your industry partner in advanced metallurgical analysis, material testing, and engineering consulting solutions.
    </Fragment>
  </Hero>

  <!-- About Us Section -->
  <Content
    id="about" <!-- Added ID for linking -->
  tagline="About Us"
  title="Leading Metallurgical Testing & Consulting"
  subtitle="Years of trusted service and expertise, dedicated to accurate and reliable results for industries worldwide."
  image={{
  src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
  alt: 'Metallurgical Lab Image',
}}
  >
  <Fragment slot="content">
    <p>
      Material Circle specializes in metallurgy, offering a full range of material testing, engineering, and consultancy services.
      We provide dependable solutions for failure analysis, quality control, process optimization, and more.
    </p>
  </Fragment>
  </Content>

  <!-- Services Section -->
  <Features
    id="services"
    tagline="Our Services"
    title="Comprehensive Metallurgical & Material Services"
    items={[
      {
        title: 'Material Testing',
        description: 'Rigorous analysis including tensile testing, hardness, microstructure examination, and more.',
        icon: 'tabler:test-pipe',
      },
      {
        title: 'Failure Analysis',
        description: 'Investigative analysis to determine failure causes and prevent future occurrences.',
        icon: 'tabler:alert-circle',
      },
      {
        title: 'Engineering Consultation',
        description: 'Expert advisory services to support material selection, design optimization, and project success.',
        icon: 'tabler:tool',
      },
      {
        title: 'Custom Solutions',
        description: 'Tailored metallurgical services to address unique project requirements and industry standards.',
        icon: 'tabler:settings',
      },
    ]}
  />

  <!-- Engineering Section -->
  <Content
    id="engineering" <!-- ID added for linking -->
  isReversed
  tagline="Engineering"
  title="Innovative Metallurgical Engineering Solutions"
  subtitle="Custom solutions for optimal performance, reliability, and cost-effectiveness."
  image={{
  src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&auto=format&fit=crop&w=2194&q=80',
  alt: 'Engineering Image',
}}
  >
  <Fragment slot="content">
    <p>
      Our engineering services include material selection, process design, and quality improvement. We strive to enhance
      efficiency and quality for every project, focusing on robust, sustainable solutions.
    </p>
  </Fragment>
  </Content>

  <!-- Contact Section -->
  <Content
    id="contact"
    tagline="Contact Us"
    title="Reach Out to Material Circle"
    subtitle="Let’s discuss how our services can benefit your business."
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Contact Image',
    }}
  >
    <Fragment slot="content">
      <p>
        Contact us for more information or to schedule a consultation. Our team is ready to provide high-quality solutions
        tailored to your industry’s needs.
      </p>
      <a href="mailto:contact@materialcircle.com" class="text-primary underline">contact@materialcircle.com</a>
    </Fragment>
  </Content>

</Layout>
